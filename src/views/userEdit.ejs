<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body>

    <%- include('partials/header') %>

    <main class="register">
        <div class="register__box">

            <div class="register__box__encabezado">
    
                <a href="/" class="rotate-scale-up-ver"><img src="/images/celstecortado.jpg" alt=""></a>
                <h4 class="animate__animated animate__flash">EDICION USUARIO</h4>
    
            </div>
    
            <form action="/users/update/<%= id %>?_method=PUT " method="POST" enctype="multipart/form-data" class="register__box__cuerpo container">
    
                <div class="register__box__cuerpo__contenido uno">
                    <label for="firstname">Nombe</label>
                    <input id="firstname" placeholder="Escriba su nombre" type="text" name="firstname" class="form-input" value="<%= firstname %>">
                </div>
    
                <div class="register__box__cuerpo__contenido uno">
                    <label for="lastname">Apellido</label>
                    <input id="lastname" placeholder="Escriba su apellido" type="text" name="lastname" class="form-input" value="<%= lastname %>">
                </div>
    
                <div class="register__box__cuerpo__contenido uno">
                    <label for="email">Email</label>
                    <input id="email" placeholder="Escriba su email" type="email" name="email" class="form-input" value="<%= email %>">
                </div>

                <div class="register__box__cuerpo__contenido uno">
                    <label for="category">Categoria</label>
                    <input id="category" placeholder="Usuario/Administrador" type="category" name="category" class="form-input" value="<%= category %>">
                </div>
    
                <div class="register__box__cuerpo__contenido uno">
                    <label for="password1" class="labels-forms">Contrase単a</label>
                    <input id="password1" type="password" placeholder="Escriba su contrase単a" name="password"
                        class="form-input">
                </div>
    
                <div class="register__box__cuerpo__contenido uno">
                    <label for="password2" class="labels-forms">Reiterar Contrase単a</label>
                    <input id="password2" type="password" placeholder="Escriba su contrase単a" name="password"
                        class="form-input">
                </div>

                <div class="col-12 col-md-6 register__box__cuerpo__contenido uno">
                    <label for="image" class="form-label">Imagen Actual</label>
                    <img src="/images/usuarios/<%= image || 'poncho.jpg' %>" alt="" name="image" class="card-img-top mb-5">

                </div>
    
                <div class="col-12 col-md-6 register__box__cuerpo__contenido uno gap-5 mb-5">
                    <label for="image" class="btn btn-secondary">Cambiar Imagen</label>
                    <input type="file" name="image" id="image" hidden>
                    <button class="btn btn-outline-dark">Guardar</button>
                    <button type="reset" class="btn btn-outline-dark">Borrar</button>
                  </div>

              <!--  <div class="register__box__cuerpo__bottom">
                    <button type="submit" class="buttom-forms"><a href="/">Enviar</a></button>
                    <button type="reset" class="buttom-forms">Borrar</button>
                </div>-->
    
            </form>
    
        </div>
    
    </main>
  <%- include('partials/footer') %>
</body>

</html>
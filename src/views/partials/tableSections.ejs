<div class="table-responsive">
    <div class="card-header">
        <a class="btn btn-outline-dark" href="/sections/add">Nueva Seccion</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NÂ°</th>
                <th scope="col">Nombre</th>
                <th scope="col">Cant. Prod.</th>
                <th scope="col">Imagen</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% sections.forEach(({id, title, image},index)=> { %>                                                     
                <tr>
                    <th scope="row">
                        <%= index + 1 %>
                    </th>
                    <td>
                        <%= title %>
                    </td>
                    <td>
                        <%= products.filter(product => product.section === title).length %>
                    </td>
                    <td>
                        <img src="/img/categories/<%=image%>" class="img-fluid"
                            alt="">
                    </td>
                    <td>
                        <div class="d-flex gap-1">
                            <a class="btn btn-sm btn-success"
                                href="/sections/edit/<%= id %>"><i
                                    class="fas fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger"
                                href="/categories/remove/<%= id %>"><i
                                    class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
      
    </table>
</div>
                            <button class="boton--tarjeta"><a href="/products/detail/<%= id %>">VER MAS</a></button>
                        </article>   
                        
                        <% }) %>

                </section>
            </main>
            <%- include('partials/scripts') %>
            <%- include('partials/footer') %>
            
    </body>
</html>